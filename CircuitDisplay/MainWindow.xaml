<Window x:Class="Mid.Circuitry.CircuitDisplay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mid.Circuitry.CircuitDisplay"
        xmlns:resx="clr-namespace:Mid.Circuitry.CircuitDisplay"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="LightSteelBlue">
        <!--Background="LightGoldenrodYellow"-->
        <Grid.RowDefinitions>
            <RowDefinition Height=".15*" />
            <RowDefinition Height="1*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <TextBox Grid.Row="0" Grid.Column="0" 
                 Text="{x:Static resx:Strings.AppTitle}"
                 FontSize="26" FontFamily="Calibri" FontWeight="UltraBold" TextAlignment="Left"
                 IsReadOnly="True" Focusable="False" BorderThickness="0" Background="LightSteelBlue" />

        <!-- TODO Bind this -->
        <!-- <local:CircuitFlowView Grid.Row="1" Grid.Column="0"></local:CircuitFlowView> -->
    </Grid>
</Window>
